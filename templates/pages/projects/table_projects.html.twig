<header class="panel-heading"><h3><strong>Projects</strong></h3></header>
		
<table class="table table-striped table-advance table-hover">
	<thead>
		<tr>
			<th style="font-weight: bold;">Name</th>
			<th style="font-weight: bold;">Project Directory</th>
			<th style="text-align:center; font-weight: bold;">Actions</th>
		</tr>
	</thead>
	<tbody>
	{% for project in projects %}
		<tr>
			<td>{{ project.name }}</td>
			<td>{{ project.projectRoot }}</td>
			<td width="150">
				{%  if vs_project_installed( project ) %}
					<a id="btnOpen" href="#" class="btn btn-success btn-circle btn-sm" title="Open">
                    	<i class="fas fa-bring-forward"></i>
               		</a>
				{% else %}
					<a id="btnInstall" class="btn btn-info btn-circle btn-sm" data-projectId="{{ project.id }}" href="javascript:void(0);" title="Install">
                    	<i class="fas fa-download"></i>
                	</a>
				{% endif %}
				<a href="#" class="btn btn-info btn-circle btn-sm" title="Edit">
                    <i class="fas fa-edit"></i>
                </a>
                <a href="#" class="btn btn-danger btn-circle btn-sm" title="Delete">
                    <i class="fas fa-trash"></i>
                </a>
			</td>
		</tr>
	{% endfor %}
	</tbody>
</table>
