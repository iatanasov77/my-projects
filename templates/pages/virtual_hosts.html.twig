{% extends 'base.html.twig' %}

{% block content %}
    <!-- Begin Page Content -->
    <div class="container-fluid">
        <!-- Page Heading -->
          <div class="d-sm-flex align-items-center justify-content-between mb-4">
            <header class="panel-heading"><h3><strong>Virtual Hosts</strong></h3></header>
          </div>

          <div class="row">
            <div class="col-lg-12">
                <div id="submitMessage" class="card bg-success text-white shadow mb-2" style="display:none;">
                    <div class="card-body"></div>
                </div>
                <section id="sectionProjects" class="panel">
                    <table class="table table-striped table-advance table-hover">
                        <thead>
                            <tr>
                                <th style="font-weight: bold;">Host</th>
                                <th style="font-weight: bold;">PHP Version</th>
                                <th style="text-align:center; font-weight: bold;">Actions</th>
                            </tr>
                        </thead>
                        <tbody>
                            {% for h in hosts %}
                                {% if h.ServerName is defined %}
                                    <tr>
                                        <td>{{ h.ServerName }}</td>
                                        <td>{{ h.PhpVersion }}</td>
                                        <td width="270">
                                            <a href="javascript:void(0);" class="btn btn-primary btnChangeVersion" title="Change Version" >
                                                <i class="fas fa-edit"></i>
                                                Change Version
                                            </a>
                                        </td>
                                    </tr>
                                {% endif %}
                            {% endfor %}
                        </tbody>
                    </table>
                </section>
            </div>
        </div>
    </div>
    <!-- /.container-fluid -->
{% endblock %}

{% block modals %}
    {{ parent() }}
    
    {% include 'modals/host_change_version.html.twig' %}
{% endblock %}

{% block scripts %}
    {{ parent() }}
    
    {{ encore_entry_script_tags( 'js/pages/virtual_hosts' ) }}
{% endblock %}
